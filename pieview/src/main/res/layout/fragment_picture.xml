<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/center_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is PictureFragment"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pic_fragment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/center_position" />

    <TextView
        android:id="@+id/pic_fragment_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pic_fragment_name" />

    <TextView
        android:id="@+id/pic_fragment_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pic_fragment_sex" />

</android.support.constraint.ConstraintLayout>